<%= form_with model: @post, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Images</label>
    <div class="custom-file mb-2">
      <%= f.label :thumb_img, class: 'custom-file-label' %>
      <%= f.file_field :thumb_img, class: 'custom-file-control' %>
    </div>
    <div class="custom-file">
      <%= f.label :header_img, class: 'custom-file-label' %>
      <%= f.file_field :header_img, class: 'custom-file-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control tinymce vh-80' %>
  </div>
  <div class="form-group">
    <div class="row justify-content-end">
      <div class="col-lg-2 col-md-3 col-sm-6 mb-1 mb-sm-0">
        <%= f.submit 'Confirm', class: 'btn btn-primary w-100' %>
      </div>
      <div class="col-lg-2 col-md-3 col-sm-6">
        <%= link_to "Go back", posts_path, class: "btn btn-secondary w-100" %>
      </div>
    </div>
  </div>
<% end %>