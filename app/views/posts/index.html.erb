<div id="headerCarousel" class="carousel slide carousel-fade vh-80" data-ride="carousel">
  <div class="carousel-inner h-100">
    <div class="carousel-item active" data-interval="15000">
      <%= image_tag "carousel-1.jpg", class: "d-block image obj-fit-cover obj-position-center h-100 w-100 image-darken" %>
      <div class="darker"></div>
      <div class="carousel-caption">
        <div class="col-lg-7 p-0 mx-auto">
          <h1 class="display-2 mb-2 text-white">Explore gaming world with Omela Blog</h1>
          <%= link_to 'Posts', posts_all_path, class: 'btn btn-outline-light text-uppercase' %>
        </div>
      </div>
    </div>
    <div class="carousel-item" data-interval="15000">
      <%= image_tag "carousel-5.jpg", class: "d-block image obj-fit-cover obj-position-center h-100 w-100 image-darken" %>
      <div class="darker"></div>
      <div class="carousel-caption">
        <div class="col-lg-7 p-0 mx-auto">
          <h1 class="display-2 mb-2 text-white">Latest news from gaming world</h1>
          <%= link_to 'News', posts_all_path(Post.categories[:news]), class: 'btn btn-outline-light text-uppercase' %>
        </div>
      </div>
    </div>
    <div class="carousel-item" data-interval="15000">
      <%= image_tag "carousel-3.jpg", class: "d-block image obj-fit-cover obj-position-center h-100 w-100 image-darken" %>
      <div class="darker"></div>
      <div class="carousel-caption">
        <div class="col-lg-7 p-0 mx-auto">
          <h1 class="display-2 mb-2 text-white">Reviews of the latest games</h1>
          <%= link_to 'Reviews', posts_all_path(Post.categories[:reviews]), class: 'btn btn-outline-light text-uppercase' %>
        </div>
      </div>
    </div>
    <%= link_to "#headerCarousel", class: "carousel-control carousel-control-prev", role: "button", "data-slide": "prev", "data-turbolinks": "false" do %>
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    <% end %>
    <%= link_to "#headerCarousel", class: "carousel-control carousel-control-next", role: "button", "data-slide": "next", "data-turbolinks": "false" do %>
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    <% end %>
  </div>
</div>

<section class="py-10">
  <div class="container">
    <h2 class="text-capitalize text-center mb-4">Latest posts</h2>
    <div class="masonry row-gutter-1 mb-4">
      <% @posts.each_with_index do |post, index| %>
        <% card_class = ([0, 2, 3].include? index)?'card-rect150':'card-square' %>
        <div class="col-md-6 col-lg-4">
          <%= link_to post_path(post), class: "card card-scale #{card_class} text-white" do %>
            <%= image_tag post.thumb_img.url, class: "card-content card-img image-darken obj-fit-cover" %>
            <div class="darker"></div>
            <div class="card-img-overlay">
              <div class="card-header">
                <span class="eyebrow text-white-50 text-uppercase mb-1"><%= post.created_at %></span>
                <h3 class="card-title w-75 post-card-title text-white"><%= post.title %></h3>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="row justify-content-center">
      <div class="col-auto">
        <%= link_to 'All posts', posts_all_path, class: 'btn btn-outline-secondary' %>
      </div>
      <div class="col-auto">
        <%= link_to 'Create', new_post_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</section>

