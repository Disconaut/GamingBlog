<section class="container py-10">
  <h2 class="text-capitalize text-center mb-4">All posts</h2>
  <div class="row-gutter-2 row-gutter-md-3 mb-4">
    <ul class="list-unstyled w-100">
      <% @posts.each do |post| %>
        <li class="mb-3">
          <div class="media post position-relative border p-3">
            <div class="card-square m-n3 col-3 p-0 overflow-hidden">
              <%= image_tag post.thumb_img.url(id: post.id), class: 'card-content obj-fit-cover obj-position-center' %>
            </div>
            <%= link_to '' , post_path(post), class: "stretched-link hidden" %>
            <div class="ml-6 media-body">
                  <h5 class="display-4"><%= post.title %></h5>
                  <span class="tag tag-right tag-bottom mr-1 mb-1">Created: <%= post.created_at %></span>
              <div class="control-links mr-2 mt-2 btn-group">
                  <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %>
                  <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-outline-danger' %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

  </div>
</section>
