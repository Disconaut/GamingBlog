<% content_for :headScripts do %>
  <%= javascript_pack_tag 'post_editor', 'data-turbolinks-track': 'reload' %>
<% end %>

<section class="jumbotron position-relative jumbotron-fluid pt-14 pb-6 bg-blue">
  <%= image_tag 'decoration.png', class: 'decoration obj-position-center' %>
  <div class="container">
    <div class="row align-items-end row-gutter-2">
      <div class="col text-white">
        <h1 class="m-0 text-white">Create post</h1>
        <nav aria-label="breadcrumbs">
          <ol class="breadcrumb text-white-50 m-0">
            <li class="breadcrumb-item"><%= link_to root_path, class: "underline text-white-50" do %><span>Home</span>
              <% end %></li>
            <li class="breadcrumb-item" aria-current="page"><%= link_to posts_all_path, class: "underline text-white-50" do %><span>Posts</span>
              <% end %></li>
            <li class="breadcrumb-item" aria-current="page"><span>Create</span></li>
          </ol></nav>
      </div>
    </div>
  </div>
</section>

<section class="container py-10">
  <%= render 'partials/post-form' %>
</section>