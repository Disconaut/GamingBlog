<% content_for :headScripts do %>
  <%= javascript_pack_tag 'post_editor', 'data-turbolinks-track': 'reload' %>
<% end %>

<section class="jumbotron position-relative jumbotron-fluid pt-14 pb-6 bg-blue">
  <%= image_tag 'decoration.png', class: 'decoration obj-position-center' %>
  <div class="container">
    <div class="row align-items-end row-gutter-2">
      <div class="col text-white">
        <h1 class="m-0 text-white">Create post</h1>
        <nav aria-label="breadcrumbs">
          <ol class="breadcrumb text-white-50 m-0">
            <li class="breadcrumb-item"><%= link_to root_path, class: "underline text-white-50" do %><span>Home</span>
              <% end %></li>
            <li class="breadcrumb-item" aria-current="page"><%= link_to posts_index_path, class: "underline text-white-50" do %><span>Admin</span>
              <% end %></li>
            <li class="breadcrumb-item" aria-current="page"><span>Create</span></li>
          </ol></nav>
      </div>
      <!--<div class="col-md-4 text-md-right">
        <div role="group" class="btn-group btn-group-sm">
          <div class="dropdown btn-group" role="group">
            <button class="btn btn-outline-light btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="true" type="button">Sort</button>
            <div role="menu" class="dropdown-menu shadow p-1_5">
              <a role="presentation" class="underline dropdown-item" href="#">What&#39;s new?</a>
              <a role="presentation" class="underline dropdown-item" href="#">Price high to low</a>
              <a role="presentation" class="underline dropdown-item" href="#">Price low to high</a></div>
          </div>
          <button class="btn btn-outline-light btn-block" type="button">Filter</button>
        </div>
      </div>-->
    </div>
  </div>
</section>

<section class="container py-10">
  <%= form_with model: @post, url: posts_create_path, html: { multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>Images</label>
      <div class="custom-file mb-2">
        <%= f.label :thumb_img, class: 'custom-file-label' %>
        <%= f.file_field :thumb_img, class: 'custom-file-control' %>
      </div>
      <div class="custom-file">
        <%= f.label :header_img, class: 'custom-file-label' %>
        <%= f.file_field :header_img, class: 'custom-file-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control tinymce vh-80' %>
    </div>
    <div class="form-group">
      <div class="row justify-content-end">
        <div class="col-2">
      <%= f.submit 'Create', class: 'btn btn-primary w-100' %>
        </div>
        <div class="col-2">
          <%= link_to "Go back", posts_index_path, class: "btn btn-secondary w-100" %>
        </div>
        </div>
    </div>
  <% end %>
</section>