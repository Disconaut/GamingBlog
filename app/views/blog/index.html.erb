<!-- latest products -->
<section class="product-table py-10">
  <div class="container">
    <h2 class="text-capitalize text-center mb-4">Latest posts</h2>
    <div class="row-gutter-2 row-gutter-md-3 mb-4">
      <ul class="list-unstyled w-100">
        <% @posts.each do |post| %>
          <li class="mb-3">
            <%= link_to post_path(params: {id: post.id}), class: "media border p-3" do %>
              <div class="card-square m-n3 col-3 p-0 overflow-hidden">
              <%= image_tag post.thumb_img.url(id: post.id), class: 'card-content obj-fit-cover obj-position-center' %>
              </div>
                <div class="ml-6 media-body">
                <h5><%= post.title %></h5>
                Created: <%= post.created_at %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>

    </div>
    <div class="row justify-content-center">
      <div class="col-auto">
        <button href="#!" class="btn btn-outline-secondary">All posts</button>
      </div>
      <div class="col-auto">
        <%= link_to 'Create', posts_create_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</section>

